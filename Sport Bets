import os
import telebot

# Bot Token
TOKEN = os.getenv("BOT_TOKEN")
bot = telebot.TeleBot(TOKEN)

# Comando inicial
@bot.message_handler(commands=['start'])
def send_welcome(message):
    welcome_text = (
        "🏆 Bem-vindo ao SharpPicks!\n\n"
        "📌 O que você pode pedir:\n"
        "1️⃣ Hoje - Picks do dia\n"
        "2️⃣ VIP - Informações do grupo VIP\n"
        "3️⃣ Calendário - Jogos da semana\n\n"
        "❓ Basta enviar uma das opções!"
    )
    bot.reply_to(message, welcome_text)

# Picks do dia
@bot.message_handler(func=lambda m: m.text.lower() in ["hoje", "picks", "picks do dia"])
def send_picks(message):
    picks = (
        "🎯 Picks de hoje:\n"
        "- Futebol: Benfica 🆚 Porto - Vitória do Benfica\n"
        "- Ténis: Nadal 🆚 Djokovic - +3.5 sets\n"
        "- Snooker: O'Sullivan 🆚 Trump - Vitória O'Sullivan"
    )
    bot.reply_to(message, picks)

# VIP Info
@bot.message_handler(func=lambda m: m.text.lower() in ["vip", "grupo vip"])
def send_vip(message):
    vip_info = (
        "💎 Grupo VIP SharpPicks\n\n"
        "✅ Picks diárias com alta taxa de acerto\n"
        "✅ Cobertura de Futebol, Ténis, Râguebi, Handebol, Snooker, Dardos\n"
        "✅ Promoção: 1 semana grátis\n\n"
        "💶 Planos:\n"
        "- 1 mês: 29,99€\n"
        "- 3 meses: 74,99€\n"
        "- 1 ano: 249,99€\n\n"
        "Para aderir, envie 'Quero VIP'"
    )
    bot.reply_to(message, vip_info)

# Calendário
@bot.message_handler(func=lambda m: m.text.lower() in ["calendario", "calendário", "jogos", "agenda"])
def send_calendar(message):
    calendar = (
        "📅 Jogos da Semana:\n"
        "- 12/08: Benfica 🆚 Porto\n"
        "- 13/08: Sporting 🆚 Braga\n"
        "- 14/08: Nadal 🆚 Djokovic\n"
        "- 15/08: Final de Snooker"
    )
    bot.reply_to(message, calendar)

# Mensagem padrão
@bot.message_handler(func=lambda m: True)
def fallback(message):
    bot.reply_to(message, "❌ Não entendi. Envie 'Hoje', 'VIP' ou 'Calendário'.")

# Rodar o bot
if __name__ == "__main__":
    bot.polling()
pyTelegramBotAPI==4.14.0
